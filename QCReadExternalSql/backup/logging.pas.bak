unit logging;

interface

uses
  Classes, SysUtils;

function SaveLog(InData: string): string;

implementation

uses
  daemonmapperunit;

// --| start |--
function SaveLog(InData: string): string;
var
  f: TextFile;
begin
  try
    AssignFile(f, CurrentDir + '\' + LogFile);
    if not FileExists(CurrentDir + '\' + LogFile) then
    begin
      Rewrite(f);
      CloseFile(f);
    end;

    Append(f);

    Writeln(f, DateTimeToStr(NOW) + #9 + InData);

    Flush(f);
    CloseFile(f);
  except
    on E: Exception do
      SaveLog('error' + #9#9 + E.ClassName + ', с сообщением: ' + E.Message);
  end;
end;

end.
