unit sql;

interface

uses
  System.SysUtils, System.Classes, Messages, Windows, Graphics, Dialogs, FIB, FIBQuery, pFIBQuery,
  FIBDatabase, pFIBDatabase, pFIBErrorHandler, Data.DB, FIBDataSet, pFIBDataSet;

var
    pFIBDatabaseChart: TpFIBDatabase;
    pFibErrorHandlerChart: TpFibErrorHandler;
    pFIBDataSetChart: TpFIBDataSet;
    pFIBQueryChart: TpFIBQuery;
    pFIBTransactionChart: TpFIBTransaction;

    procedure SqlCreate(Sender: TObject);
    procedure pFibErrorHandlerChartFIBErrorEvent(Sender: TObject;
      ErrorValue: EFIBError; KindIBError: TKindIBError; var DoRaise: Boolean);



implementation

uses
  main;


procedure SqlCreate(Sender: TObject);
begin
    pFIBDatabaseChart := TpFIBDatabase.Create(nil);
    pFibErrorHandlerChart := TpFibErrorHandler.Create(nil);
    pFIBDataSetChart := TpFIBDataset.Create(nil);
    pFIBQueryChart := TpFIBQuery.Create(nil);
    pFIBTransactionChart := TpFIBTransaction.Create(nil);
end;


procedure pFibErrorHandlerChartFIBErrorEvent(Sender: TObject;
  ErrorValue: EFIBError; KindIBError: TKindIBError; var DoRaise: Boolean);
begin
    if KindIBError = keLostConnect then
        showmessage('lost connect');
end;





end.
