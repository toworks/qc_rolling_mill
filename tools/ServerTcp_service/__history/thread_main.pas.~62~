unit thread_main;

interface

uses
  SysUtils, Classes, Windows, ActiveX;

type
  TThreadMain = class(TThread)

  private
    { Private declarations }
  protected
    procedure Execute; override;
  end;

var
  ThreadMain: TThreadMain;

//  {$DEFINE DEBUG}

procedure WrapperMain; // обертка для синхронизации и выполнения с другим потоком
function GetHeat: bool;
function GetChemicalAnalysis(InHeat: string): bool;

implementation

uses
  logging, settings, main, sql;

procedure TThreadMain.Execute;
begin
  CoInitialize(nil);
  while not Terminated do
  begin
    Synchronize(WrapperMain);
    sleep(1000);
  end;
  CoUninitialize;
end;

procedure WrapperMain;
begin
  try
      GetHeat;
  except
    on E: Exception do
      SaveLog('error'+#9#9+E.ClassName+', с сообщением: '+E.Message);
  end;
end;


function GetHeat: bool;
begin
  try
    FQuery.Close;
    FQuery.SQL.Clear;
    FQuery.SQL.Add('select FIRST 1 * from qc_chemical_analysis');
    FQuery.ExecQuery;
    FQuery.Transaction.Commit;
  except
    FQuery.Close;
    FQuery.SQL.Clear;
    FQuery.SQL.Add('EXECUTE BLOCK AS BEGIN');
    FQuery.SQL.Add('if (not exists(select 1 from rdb$relations where rdb$relation_name = ''qc_chemical_analysis'')) then');
    FQuery.SQL.Add('execute statement ''create table qc_chemical_analysis (');
    FQuery.SQL.Add('id NUMERIC(18,0) NOT NULL, datetime TIMESTAMP NOT NULL,');
    FQuery.SQL.Add('heat VARCHAR(26) NOT NULL, date_external DATE NOT NULL,');
    FQuery.SQL.Add('grade VARCHAR(50), standard VARCHAR(50), c NUMERIC(6,6),');
    FQuery.SQL.Add('mn NUMERIC(6,6), si NUMERIC(6,6), s NUMERIC(6,6),');
    FQuery.SQL.Add('cr NUMERIC(6,6), b NUMERIC(6,6),');
    FQuery.SQL.Add('PRIMARY KEY (id));'';');
    FQuery.SQL.Add('execute statement ''CREATE SEQUENCE gen_qc_chemical_analysis;'';');
    FQuery.SQL.Add('END');
    FQuery.ExecQuery;
    FQuery.Transaction.Commit;
  end;

  try
      // чистим таблицу от старых данных
      FQuery.Close;
      FQuery.SQL.Clear;
      // удаляем записи старше 10 месяцев (300 дней)
      FQuery.SQL.Add('DELETE FROM qc_chemical_analysis where');
      FQuery.SQL.Add('datetime < current_timestamp-300');
      FQuery.ExecQuery;
      FQuery.Transaction.Commit;
  except
    on E: Exception do
      SaveLog('error' + #9#9 + E.ClassName + ', с сообщением: ' + E.Message);
  end;

  try
    FQuery.Close;
    FQuery.SQL.Clear;
    FQuery.SQL.Add('select distinct t1.heat, t2.heat as heat_test FROM qc_temperature t1');
    FQuery.SQL.Add('LEFT OUTER JOIN');
    FQuery.SQL.Add('qc_chemical_analysis t2');
    FQuery.SQL.Add('on t1.heat=t2.heat');
    FQuery.SQL.Add('where t2.heat is null');
    FQuery.SQL.Add('group by t1.heat, t2.heat, t1.id');
    FQuery.SQL.Add('order by t1.id desc');
    FQuery.ExecQuery;
//    FQuery.Transaction.Commit;
  except
    on E: Exception do
      SaveLog('error' + #9#9 + E.ClassName + ', с сообщением: ' + E.Message);
  end;

  while not FQuery.Eof do
  begin
{$IFDEF DEBUG}
    SaveLog('debug' + #9#9 + 'heat -> '+FQuery.FieldByName('heat').AsString);
    SaveLog('debug' + #9#9 + 'heat_test -> '+FQuery.FieldByName('heat_test').AsString);
{$ENDIF}
      if FQuery.FieldByName('heat_test').IsNull then
          GetChemicalAnalysis(FQuery.FieldByName('heat').AsString);
      FQuery.Next;
  end;
end;


function GetChemicalAnalysis(InHeat: string): bool;
var
  ChemicalAnalysisArray: array [0 .. 9] of string;
begin
  try
      OraQuery1.FetchAll := true;
      OraQuery1.Close;
      OraQuery1.SQL.Clear;
      OraQuery1.SQL.Add('select DATE_IN_HIM');
      OraQuery1.SQL.Add(', NPL, MST, GOST, C, MN, SI, S, CR, B from him_steel');
      OraQuery1.SQL.Add('where DATE_IN_HIM>=sysdate-300'); //-- 300 = 10 month
      OraQuery1.SQL.Add('and NUMBER_TEST=''0''');
      OraQuery1.SQL.Add('and NPL in ('''+InHeat+''')');
      OraQuery1.SQL.Add('order by DATE_IN_HIM desc');
      OraQuery1.Open;
  except
    on E : Exception do
      begin
        SaveLog('error'+#9#9+E.ClassName+', с сообщением: '+E.Message);
        exit;
      end;
  end;
      //если не находим записываем фeйк
      if not OraQuery1.FieldByName('NPL').IsNull then
       begin
          ChemicalAnalysisArray[0] := OraQuery1.FieldByName('DATE_IN_HIM').AsString;
          ChemicalAnalysisArray[1] := OraQuery1.FieldByName('NPL').AsString;
          ChemicalAnalysisArray[2] := OraQuery1.FieldByName('MST').AsString;
          ChemicalAnalysisArray[3] := OraQuery1.FieldByName('GOST').AsString;
          ChemicalAnalysisArray[4] := StringReplace(OraQuery1.FieldByName('C').AsString,',','.',[rfReplaceAll]);
          ChemicalAnalysisArray[5] := StringReplace(OraQuery1.FieldByName('MN').AsString,',','.',[rfReplaceAll]);
          ChemicalAnalysisArray[6] := StringReplace(OraQuery1.FieldByName('SI').AsString,',','.',[rfReplaceAll]);
          ChemicalAnalysisArray[7] := StringReplace(OraQuery1.FieldByName('S').AsString,',','.',[rfReplaceAll]);
          ChemicalAnalysisArray[8] := StringReplace(OraQuery1.FieldByName('CR').AsString,',','.',[rfReplaceAll]);
          ChemicalAnalysisArray[9] := StringReplace(OraQuery1.FieldByName('B').AsString,',','.',[rfReplaceAll]);
       end
   else
       begin
          ChemicalAnalysisArray[0] := '01.01.0001';
          ChemicalAnalysisArray[1] := InHeat;
          ChemicalAnalysisArray[2] := '0';
          ChemicalAnalysisArray[3] := '0';
          ChemicalAnalysisArray[4] := '0';
          ChemicalAnalysisArray[5] := '0';
          ChemicalAnalysisArray[6] := '0';
          ChemicalAnalysisArray[7] := '0';
          ChemicalAnalysisArray[8] := '0';
          ChemicalAnalysisArray[9] := '0';
       end;
      SaveLog('service'+#9#9+'save'+#9+'chemical analysis -> '+
                       ChemicalAnalysisArray[0]+#9+ChemicalAnalysisArray[1]+#9+
                       ChemicalAnalysisArray[2]+#9+ChemicalAnalysisArray[3]+#9+
                       ChemicalAnalysisArray[4]+#9+ChemicalAnalysisArray[5]+#9+
                       ChemicalAnalysisArray[6]+#9+ChemicalAnalysisArray[7]+#9+
                       ChemicalAnalysisArray[8]+#9+ChemicalAnalysisArray[9]);

  try
    FQuery.Close;
    FQuery.SQL.Clear;
    FQuery.SQL.Add('insert INTO qc_chemical_analysis');
    FQuery.SQL.Add('(id, datetime, heat, date_external, grade, standard, c, mn, si, s, cr, b)');
    FQuery.SQL.Add('values(GEN_ID(gen_qc_chemical_analysis, 1), current_timestamp,');
    FQuery.SQL.Add(''''+ChemicalAnalysisArray[1]+''', '''+ChemicalAnalysisArray[0]+''',');
    FQuery.SQL.Add(''''+ChemicalAnalysisArray[2]+''', '''+ChemicalAnalysisArray[3]+''',');
    FQuery.SQL.Add(''+ChemicalAnalysisArray[4]+', '+ChemicalAnalysisArray[5]+',');
    FQuery.SQL.Add(''+ChemicalAnalysisArray[6]+', '+ChemicalAnalysisArray[7]+',');
    FQuery.SQL.Add(''+ChemicalAnalysisArray[8]+', '+ChemicalAnalysisArray[9]+')');
    FQuery.ExecQuery;
    FQuery.Transaction.Commit;
  except
    on E: Exception do
      SaveLog('error' + #9#9 + E.ClassName + ', с сообщением: ' + E.Message);
  end;
end;




end.
